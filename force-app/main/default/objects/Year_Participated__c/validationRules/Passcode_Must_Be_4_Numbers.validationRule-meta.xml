<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Passcode_Must_Be_4_Numbers</fullName>
    <active>true</active>
    <errorConditionFormula>!REGEX(Passcode__c,&quot;^\\d{4}?$&quot;)</errorConditionFormula>
    <errorDisplayField>Passcode__c</errorDisplayField>
    <errorMessage>The passcode entered must be 4 numbers.

Example: 1357</errorMessage>
</ValidationRule>
